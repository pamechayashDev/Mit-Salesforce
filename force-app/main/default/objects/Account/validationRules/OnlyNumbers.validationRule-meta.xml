<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OnlyNumbers</fullName>
    <active>true</active>
    <description>Phone field must only contain numerical values and +
No spaces or a minus -</description>
    <errorConditionFormula>AND(!ISBLANK(Phone), !ISNUMBER(Phone))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Please only enter numbers</errorMessage>
</ValidationRule>
